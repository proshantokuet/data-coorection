	<artifactId>opensrp-web</artifactId>
	<packaging>war</packaging>
	<name>opensrp-web</name>
	<url>http://github.com/OpenSRP/opensrp-server</url>

	<properties>
		<jetty.port>9979</jetty.port>
		<release.version>0.1-SNAPSHOT</release.version>
		<main.basedir>${project.basedir}/..</main.basedir>
	</properties>

	<build>
		<finalName>opensrp-web</finalName>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
			</resource>
			<resource>
				<directory>../assets/config</directory>
			</resource>
			<resource>
				<directory>../assets/schedules</directory>
				<targetPath>schedules</targetPath>
			</resource>
			<resource>
				<directory>../assets/form</directory>
				<targetPath>form</targetPath>
			</resource>
			<resource>
				<directory>../assets/multimedia</directory>
				<targetPath>multimedia</targetPath>
			</resource>
			<resource>
				<directory>../build</directory>
				<filtering>true</filtering>
				<includes>
					<include>maven.properties</include>
				</includes>
			</resource>
			<resource>
				<directory>../opensrp-core/src/main/resources</directory>
			</resource>
			<resource>
				<directory>../opensrp-mcare-register/src/main/resources</directory>
			</resource>
			<!-- <resource>
				<directory>../opensrp-etl/src/main/resources</directory>
			</resource> -->
		</resources>
		<plugins>
			<plugin>
				<groupId>org.mortbay.jetty</groupId>
				<artifactId>jetty-maven-plugin</artifactId>
				<version>8.0.1.v20110908</version>
				<configuration>
					<systemProperties>
						<systemProperty>
							<name>jetty.port</name>
							<value>${jetty.port}</value>
						</systemProperty>
						<systemProperty>
							<name>slf4j</name>
							<value>false</value>
						</systemProperty>
						<systemProperty>
							<name>log4j.configuration</name>
							<value>file:${main.basedir}/assets/config/log4j.xml</value>
						</systemProperty>
					</systemProperties>
					<webAppConfig>
						<contextPath>/</contextPath>
					</webAppConfig>
					<stopKey>secret</stopKey>
					<stopPort>6679</stopPort>
					<connectors>
						<connector implementation="org.eclipse.jetty.server.nio.SelectChannelConnector">
							<port>${jetty.port}</port>
						</connector>
						<connector
							implementation="org.eclipse.jetty.server.ssl.SslSelectChannelConnector">
							<port>8443</port>
							<keystore>${main.basedir}/assets/security/drishti_server.keystore</keystore>
							<keyPassword>mouse monitor cube</keyPassword>
							<password>mouse monitor cube</password>
						</connector>
					</connectors>
				</configuration>
				<executions>
					<execution>
						<id>start-jetty</id>
						<phase>pre-integration-test</phase>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<scanIntervalSeconds>0</scanIntervalSeconds>
							<daemon>true</daemon>
						</configuration>
					</execution>
					<execution>
						<id>stop-jetty</id>
						<phase>post-integration-test</phase>
						<goals>
							<goal>stop</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>com.github.searls</groupId>
				<artifactId>jasmine-maven-plugin</artifactId>
				<version>1.0.2-beta-5</version>
				<executions>
					<execution>
						<goals>
							<goal>test</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<jsSrcDir>
						${project.basedir}/src/main/webapp/js/domain
					</jsSrcDir>
					<jsTestSrcDir>
						${project.basedir}/src/test/js
					</jsTestSrcDir>
				</configuration>
			</plugin>
		</plugins>
	</build>

